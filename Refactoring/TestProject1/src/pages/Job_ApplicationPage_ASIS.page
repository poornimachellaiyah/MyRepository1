                <apex:inputfield id="ifldSkypeUsername" value="{!Applicant.Skype_User_Name__c}"/>
            </apex:pageBlockSectionItem>            
        </apex:pageBlockSection>
        
        <apex:pageBlockSection id="pbs030" title="Address details" columns="1" collapsible="false">
        
