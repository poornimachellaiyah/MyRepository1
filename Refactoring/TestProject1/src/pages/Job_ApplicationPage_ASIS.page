        <!-- Narpavi-TPT-(3-March-2016)-Added for Data Quality 
             To get the history of applicant with VSO  -->   
        <apex:pageBlockSection id="pbs100" columns="1">
                                       
        
            <apex:outputtext id="otxtJobDetails">Please provide us with details of your current or most recent job</apex:outputtext>
        
            <apex:pageBlockSectionItem id="pbsi102">
                <apex:outputlabel id="olblJobTitle" value="Job title" style="display:block;width:140px;"/>
